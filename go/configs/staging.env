 Staging Environment Configuration

# Application
APP_ENV=staging
LOG_LEVEL=info
LOG_FORMAT=json

# Gateway
GATEWAY_HTTP_PORT=8080
GATEWAY_READ_TIMEOUT=30
GATEWAY_WRITE_TIMEOUT=30

# Greeter Service
GREETER_HTTP_PORT=8081
GREETER_GRPC_PORT=50051
GREETER_URL=http://greeter-service:8081

# Shell Service
SHELL_HTTP_PORT=9002
SHELL_STATIC_DIR=/app/static

